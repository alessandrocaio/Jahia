                <ref bean="Engine.Tab.EditRoles"/>
                <ref bean="Engine.Tab.Usages"/>
            </list>
        </property>

        <property name="forbiddenNodeTypesForDragAndDrop" ref="forbidDeleteRenameCutForNodeTypes"/>
    </bean>

